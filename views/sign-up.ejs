<%- include('partials/header.ejs') -%>
<form class="w-25 m-auto">
    <div class="form-column  align-items-center">
      <div class="col-auto">
        <label class="sr-only" for="fullName">Name</label>
        <input type="text" class="form-control mb-2" id="fullName" name="fullName" placeholder="Enter Full Name">
      </div>
      <div class="col-auto">
        <label class="sr-only" for="userName">Username</label>
        <div class="input-group mb-2">
          <div class="input-group-prepend">
            <div class="input-group-text">@</div>
          </div>
          <input type="text" class="form-control" id="userName" placeholder="Enter a Username">
        </div>
      </div>

      <div class="col-auto">
        <label for="">Email Address</label>
        <input type="email" class="form-control" name="email" id="email" placeholder="****@email.com">
      </div>

      <div class="col-auto">
        <label for="password">Password</label>
        <input type="password" id="password" class="form-control mx-sm-3" aria-describedby="passwordHelpInline">
        <small id="passwordHelpInline" class="text-muted">
          Must be 8-20 characters long.
        </small>
      </div>
      
      <div class="col-auto">
        <label for="confirmPassword">Confirm Password</label>
        <input type="password" id="confirmPassword" class="form-control mx-sm-3" >
        
      </div>
      <div class="col-auto">
        <div class="form-check mb-2">
          <input class="form-check-input" type="checkbox" id="autoSizingCheck">
          <label class="form-check-label" for="autoSizingCheck">
           I accept to the Terms & Conditions.
          </label>
        </div>
      </div>
      <div class="col-auto text-center m-auto">
        <button type="submit" class="btn btn-primary mb-2">Sign Up</button>
      </div>
    </div>
  </form>
<%- include('partials/footer.ejs') -%>